var pwd={
    changepwd:function (url) {
        var _pwd_cur = $('#pwd_cur').val();
        var _pwd_new = $('#pwd_new').val();
        var _pwd_confirm = $('#pwd_confirm').val();

        if($.trim(_pwd_cur) ==''){
            alert('Không bỏ trống mật khẩu hiện tại');
            $('#pwd_cur').focus();
            return false;
        }
        if($.trim(_pwd_new) ==''){
            alert('Không bỏ trống mật khẩu mới');
            $('#pwd_new').focus();
            return false;
        }
        if($.trim(_pwd_confirm) ==''){
            alert('Vui lòng xác nhận lại mật khẩu');
            $('#pwd_confirm').focus();
            return false;
        }
        if(_pwd_new.length < 6){
            alert('Mật khẩu phải lớn hơn hoặc bằng 6 ký tự');
            $('#pwd_new').focus();
            return false;
        }
        if($.trim(_pwd_new) != $.trim(_pwd_confirm)){
            alert('Xác nhận mật khẩu không chính xác');
            return false;
        }
